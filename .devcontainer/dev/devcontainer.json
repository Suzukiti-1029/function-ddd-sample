{
  "name": "F# Dev Container",
  "dockerComposeFile": "../../docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace/function-ddd-sample",
  // "postCreateCommand": "dotnet fsi --version",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      // 必要な拡張機能を自動でインストール
      "extensions": [
        "ionide.ionide-fsharp",
        "ms-dotnettools.csharp",
        "mhutchie.git-graph",
        "streetsidesoftware.code-spell-checker",
        "Gruntfuggly.todo-tree",
        "mosapride.zenkaku",
        "christian-kohler.path-intellisense"
      ]
    }
  }
}
