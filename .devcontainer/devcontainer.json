{
  "name": "F# Dev Container",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspace/function-ddd-sample",
  // "postCreateCommand": "dotnet fsi --version",
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      // 必要な拡張機能を自動でインストール
      "extensions": [
        "ionide.ionide-fsharp", // F#開発用拡張機能
        "ms-dotnettools.csharp" // C#拡張（必要に応じて、F#プロジェクトでも利用する場合がある）
      ]
    }
  }
}
